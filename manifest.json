{
  "manifest_version": 3,
  "name": "XCountry",
  "description": "X country reveal.",
  "version": "0.0.1",
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://x.com/*"
  ],
  "permissions": [
    "storage",
    "cookies",
    "webRequest"
  ]
}

